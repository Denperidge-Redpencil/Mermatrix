{
  "name": "mermatrix",
  "version": "1.0.0",
  "description": "A simple but powerful starter for building a Matrix bot using matrix-bot-sdk",
  "main": "app/index.ts",
  "dependencies": {
    "matrix-bot-sdk": "^0.6.3",
    "matrix-bot-starter": "file:Matrix-Bot-Starter/matrix-bot-starter-1.0.2.tgz",
    "dotenv": "^16.0.3",
    "sharp": "^0.31.3",
    "headless-mermaid": "^1.3.0"
  },
  "devDependencies": {
    "typescript": "^4.9.4",
    "@types/sharp": "^0.31.1",
    "ts-node-dev": "^2.0.0"
  },
  "scripts": {
    "start": "node build/index.js",
    "dev": "npx ts-node-dev --files app/index.ts",
    "build": "npx tsc",
    "start-docker": "docker run --userns=host --network=\"host\" mermatrix",
    "dev-docker": "npm run build-docker && npm run start-docker",
    "build-docker": "cp -n .env .env.docker && docker build -t mermatrix ."
  },
  "author": "Denperidge",
  "license": "MIT"
}
